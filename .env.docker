# Environment variables for Docker Compose
# Copy this file to .env and fill in your values

# Google Gemini API Key (optional if using local model)
GEMINI_API_KEY=your_api_key_here

# Chat History Configuration
CHAT_HISTORY_RETENTION_HOURS=24

# Local Model Configuration
# Set to true to use Ollama (free, private)
# Set to false to use Google Gemini API
USE_LOCAL_MODEL=false

# Ollama Model Name
# Options: qwen2.5:3b, phi3:mini, llama3.2:3b, gemma2:2b
LOCAL_MODEL_NAME=qwen2.5:3b
